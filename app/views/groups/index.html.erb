<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <tbody>
    <% @groups.each do |group| %>
          <%= link_to edit_group_path(group) do %>
            <%= image_tag group.image, :class => 'col-1 rounded-circle h-25' %>
            <%= group.name %>
            <%= group.created_at %>
          <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_group_path %>
