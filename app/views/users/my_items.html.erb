<p class="h5"><%= current_user.user_name %></p></br>
<%= total_items %>
<p class="h6">All my items</p>
<body>
  <div>
  <% @items.each do |item| %>
    <%= image_tag item.groups.first.image, :class => 'col-3 rounded-lg'%>
    <%= item.name %>
    <%= item.amount %>
    <%= item.created_at %></br>
  <% end %>
  </div>
  <%= link_to 'Add New Item', new_item_path, :class => 'btn'%>
</body>
